<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<!--
        Copyright 2012 Project FiFo / Heinz N. Gies
-->

<service_bundle type='manifest' name='dalmatinerdb'>
  <service
    name='dalmatiner/db'
    type='service'
    version='0.1.0'>
    <create_default_instance enabled='false' />
    <single_instance />
    <dependency
	name='net-loopback'
	grouping='require_all'
	restart_on='none'
	type='service'>
      <service_fmri value='svc:/network/loopback' />
    </dependency>

    <dependency
	name='net-physical'
	grouping='require_all'
	restart_on='none'
	type='service'>
      <service_fmri value='svc:/network/physical' />
    </dependency>

    <dependency
	name='fs'
	grouping='require_all'
	restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>

    <dependency
	name='epmd'
	grouping='require_all'
	restart_on='none' type='service'>
      <service_fmri value='svc:/pkgsrc/epmd:default'/>
    </dependency>

    <exec_method
      type='method'
      name='start'
      exec='/opt/local/dalmatinerdb/bin/ddb %m'
      timeout_seconds='30'>
      <method_context>
	<method_environment>
	  <envvar name='PATH' value='/opt/local/gnu/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin'/>
	  <envvar name='HOME' value='/var/db/dalmatinerdb'/>
	</method_environment>
      </method_context>
    </exec_method>

    <exec_method
	name='restart'
	type='method'
        exec='/opt/local/dalmatinerdb/bin/ddb %m'
	timeout_seconds='60'>
      <method_context>
	<method_environment>
	  <envvar name='PATH' value='/opt/local/gnu/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin'/>
	  <envvar name='HOME' value='/var/db/dalmatinerdb'/>
	</method_environment>
      </method_context>
    </exec_method>

    <exec_method
	name='stop'
	type='method'
        exec='/opt/local/dalmatinerdb/bin/ddb %m'
	timeout_seconds='60'>
      <method_context>
	<method_environment>
	  <envvar name='PATH' value='/opt/local/gnu/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin'/>
	  <envvar name='HOME' value='/var/db/dalmatinerdb'/>
	</method_environment>
      </method_context>
    </exec_method>

    <template>
      <common_name>
        <loctext xml:lang='C'>
          Project FiFo's messaging Server.
        </loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
